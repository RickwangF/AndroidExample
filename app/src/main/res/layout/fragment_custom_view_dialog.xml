<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dialog_custom_view"
    android:layout_width="400dp"
    android:layout_height="200dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/dialog_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="10dp"
        android:text="自定义View的对话框"
        android:textAlignment="center">
    </TextView>

    <TextView
        android:id="@+id/dialog_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/dialog_title"
        android:layout_marginTop="50dp"
        android:text="对话框内容"
        android:textAlignment="center"></TextView>

    <Button
        android:id="@+id/dialog_confirm_btn"
        android:layout_width="0dp"
        android:layout_height="40dp"
        app:layout_constraintTop_toBottomOf="@id/dialog_title"
        android:layout_marginTop="125dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/dialog_cancel_btn"
        app:layout_constraintHorizontal_weight="1"
        android:text="确定"></Button>
    <Button
        android:id="@+id/dialog_cancel_btn"
        android:layout_width="0dp"
        android:layout_height="40dp"
        app:layout_constraintTop_toBottomOf="@id/dialog_title"
        android:layout_marginTop="125dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/dialog_confirm_btn"
        app:layout_constraintHorizontal_weight="1"
        android:text="取消"></Button>

</android.support.constraint.ConstraintLayout>